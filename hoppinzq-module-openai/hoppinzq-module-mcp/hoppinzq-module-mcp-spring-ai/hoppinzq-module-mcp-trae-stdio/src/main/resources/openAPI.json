{
  "openapi": "3.0.0",
  "info": {
    "title": "后端的一些公共接口",
    "description": "提供一些公共的功能",
    "version": "1.0.0"
  },
  "paths": [
    {
      "https://userapi-newtabpro.newtabpro.cn/getxzinfo": {
        "get": {
          "summary": "获取星座运势",
          "operationId": "getXZInfo",
          "parameters": [
            {
              "name": "xid",
              "in": "query",
              "description": "星座编号：1:白羊座，2:金牛座，3:双子座，4:巨蟹座，5:狮子座，6:处女座，7:天秤座，8:天蝎座，9:射手座，10:摩羯座，11:水瓶座，12:双鱼座",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              },
              "example": 1
            }
          ],
          "responses": {
            "status": 1,
            "data": {
              "xzwid": "星座编号",
              "fortune": "幸运值，返回0~5之间的数字,5为最大",
              "lovefortune": "爱情运势，返回0~5之间的数字,5为最大",
              "careerstudies": "事业，返回0~5之间的数字,5为最大",
              "fortunefortune": "财运，返回0~5之间的数字,5为最大",
              "healthindex": "健康指数，返回0%~100%",
              "luckycolor": "幸运颜色，返回颜色名称",
              "luckynumber": "幸运数字，返回数字",
              "speeddating": "速配星座，返回星座名称",
              "introduction": "星座整体运势",
              "thumb": "星座图片地址",
              "love": "爱情运势，返回描述",
              "wealth": "财运运势，返回描述",
              "cause": "事业运势，返回描述"
            }
          }
        }
      },
      "https://userweatherapi-newtabpro.newtabpro.cn/api/GetAssistData": {
        "get": {
          "summary": "获取天气和黄历",
          "operationId": "getWeatherInfo",
          "parameters": [
            {
              "name": "type",
              "in": "query",
              "description": "类型，0:黄历，1:天气，2：全部",
              "required": true,
              "schema": {
                "type": "integer",
                "format": "int64"
              },
              "example": 2
            }
          ],
          "responses": {
            "result": {
              "huangli": {
                "yi": "黄历-事宜",
                "ji": "黄历-忌讳"
              },
              "weather": {
                "air": {
                  "aqi": "天气的aqi指数",
                  "aqi_name": "空气质量"
                },
                "observe": {
                  "weather_short": "天气概况"
                }
              }
            }
          }
        }
      }
    }
  ]
}
